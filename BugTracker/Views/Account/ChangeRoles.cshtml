@using BugTracker.Helpers
@model IEnumerable<BugTracker.Models.ApplicationUser>

@{ 
    var roleHelper = new RoleHelper();
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @item.firstName
        </td>
        <td>
            @item.lastName
        </td>
        <td>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Roles: </b>
            @roleHelper.ListUserRoles(item.Id).FirstOrDefault().ToString()
        </td>
        <td class="text-right">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Change Role:</b> @Html.ActionLink("Edit", "EditRoles", new { userId = item.Id })
        </td>
    </tr>
    <hr />
}