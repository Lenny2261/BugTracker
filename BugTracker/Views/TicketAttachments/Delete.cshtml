@model BugTracker.Models.TicketAttachments

@{
    ViewBag.Title = "Delete";
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ticket Attachment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Attachment Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.filePath)
        </dd>

        <dt>
            Posted By
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.firstName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-dark" />
            <a href="@Url.Action("Details", "Tickets", new { id = Model.TicketId })">Back to Ticket</a>
        </div>
    }
</div>
