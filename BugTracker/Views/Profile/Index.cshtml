@model BugTracker.Models.DashboardViewModel

<div>
    <section>
        <h1 class="section-header">
            <div>Dashboard</div>
        </h1>
        <br />
        @if (User.IsInRole("Submitter"))
        {
        <div class="row">
            <h3>Tickets You Made</h3>
            <br />
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Assigned Personel
                        </th>
                        <th>
                            Project
                        </th>
                        <th>
                            Priority
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Type of Ticket
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Date Created
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.tickets)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Assigned.firstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Project.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketPriority.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketStatus.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TicketType.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            @{
                                var createdBlog = item.created.ToString().Split(' ');
                            }
                            <td>
                                @createdBlog[0] @createdBlog[1] @createdBlog[2]
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Tickets" , new { id = item.Id })">Edit</a>
                                <a href="@Url.Action("Details", "Tickets", new { id = item.Id })">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        }
        else if (User.IsInRole("Developer"))
        {
            <div class="row">
                <div class="col-md-12">
                    <h3>Your Tickets</h3>
                    <br />
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Submitter of Ticket
                                </th>
                                <th>
                                    Project
                                </th>
                                <th>
                                    Priority
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Type of Ticket
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.tickets)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Owner.firstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Project.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketPriority.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketStatus.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketType.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Tickets" , new { id = item.Id })">Edit</a>
                                        <a href="@Url.Action("Details", "Tickets", new { id = item.Id })">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Projects You Are On</h3>
                    <br />
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Project Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.projects)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <h3>Tickets From Projects You Are The Manager For</h3>
                    <br />
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Personel Assigned
                                </th>
                                <th>
                                    Submitter of Ticket
                                </th>
                                <th>
                                    Project
                                </th>
                                <th>
                                    Priority
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Type of Ticket
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.tickets)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Assigned.firstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Owner.firstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Project.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketPriority.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketStatus.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TicketType.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Tickets" , new { id = item.Id })">Edit</a>
                                        <a href="@Url.Action("Details", "Tickets", new { id = item.Id })">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h3>Projects You Are On</h3>
                    <br />
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Project Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.projects)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.description)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-12 col-md-6 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h4>Ticket Statuses</h4>
                        </div>
                        <div class="card-body">
                            <canvas id="myChart4"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
</div>

@section scripts{
    <script>
        $('.table').DataTable();
    </script>

    <script>
        var check = '@TempData["Attempted"]';
        if (check == "Failure") {
            swal({
                type: 'error',
                title: 'Oops...',
                text: "You cannot edit or see the tickets you do not belong to!",
            })
        }
    </script>
        <script>
        var ctx = document.getElementById("myChart4").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                datasets: [{
                    data: [
                        @TempData["Finished"],
                        @TempData["InProgress"],
                        @TempData["OnHold"],
                        @TempData["NotStart"],
                    ],
                    backgroundColor: [
                        '#574B90',
                        '#28a745',
                        '#ffc107',
                        '#dc3545',
                    ],
                    label: 'Dataset 1'
                }],
                labels: [
                    'Finished',
                    'In Progress',
                    'On Hold',
                    'Not Started'
                ],
            },
            options: {
                responsive: true,
                legend: {
                    position: 'bottom',
                },
            }
        });
        </script>
}